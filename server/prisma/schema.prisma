generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    role      String   @default("student")
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Session {
    id      String   @id
    sid     String   @unique
    data    String
    expires DateTime
}
