@startuml CreateClass
title <font size=24>Create Account Sequence</font>
skinparam sequenceMessageAlign center
autonumber

actor Admin as act
boundary AdminPage as page
participant ":ClassRouter" as router
control ClassController as controler
participant ":Class" as context
database Database as db

loop Input invalid
    act -> page: Enter new information of Class and click "LÆ°u" button
    activate page
    page -> page: Validation input
    activate page

    deactivate page
    autonumber 3
    page --> act: Display invalid input
end

autonumber 4
page -> router: endpoint /api/class/create_class
activate router
router -> controler: Call CreateNewClass(classData) method
activate controler
controler -> context: Call FindOne(classData.name) method
activate context
context -> db: Query database
activate db
db --> context: Return Class
deactivate db
context --> controler: Return Class
deactivate context
controler -> controler: Check null Class
activate controler
deactivate controler
opt Class not null
    autonumber 10.1
    controler --> router: Return "Class had existed"
    router --> page: Return "Class had existed"
    page --> act: Return "Class had existed"
end
autonumber 11
controler -> context: Call newClass.save(classData) method
activate context
context -> db: Insert database
activate db
db --> context: Return number
deactivate db
context --> controler: Return number
deactivate context
alt number < 0
    autonumber 14.1
    controler --> router: Return message error
    autonumber 14.1.1
    router --> page: Return message error
    page --> act: Show message error
else number > 0
    autonumber 14.2
    controler --> router: Return message error
    autonumber 14.2.1
    deactivate controler
    router --> page: Return message successful
    deactivate router
    page --> act: Show message successful and redirect to list Class
    deactivate page
end
@enduml