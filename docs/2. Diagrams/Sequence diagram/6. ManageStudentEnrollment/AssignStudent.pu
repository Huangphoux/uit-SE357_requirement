@startuml AssignStudent
title <font size=24>Assign Student Course Sequence</font>
skinparam sequenceMessageAlign center
autonumber

actor Admin as act
boundary AdminPage as page
participant ":CourseRouter" as router
control CourseController as controler
participant ":Course" as context
database Database as db

act -> page: Choose Course and input student info click "Assign Student" button
activate page
page -> router: endpoint /api/course/assign_student
activate router
router -> controler: Call AssignStudent(courseData) method
activate controler
controler -> context: Call FindOne(courseData.name) method
activate context
context -> db: Query database
activate db
db --> context: Return Course
deactivate db
context --> controler: Return Course
deactivate context
controler -> controler: Check null Course
activate controler
deactivate controler
opt Course not null
    autonumber 8.1
    controler --> router: Return "Course not existed"
    router --> page: Return "Course not existed"
    page --> act: Return "Course not existed"
end
autonumber 9
controler -> context: Call newInforCourse.save(courseData.students) method
activate context
context -> db: Update database
activate db
db --> context: Return number
deactivate db
context --> controler: Return number
deactivate context
alt number < 0
    autonumber 12.1
    controler --> router: Return message error
    autonumber 12.1.1
    router --> page: Return message error
    page --> act: Show message error
else number > 0
    autonumber 12.2
    controler --> router: Return message error
    autonumber 12.2.1
    deactivate controler
    router --> page: Return message successful
    deactivate router
    page --> act: Show message successful and redirect to list Course
    deactivate page
end
@enduml